<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_4sdp">

    <me.jagar.chatvoiceplayerlibrary.VoicePlayerView
        android:id="@+id/playAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:enableVisualizer="false"
        app:visualizationPlayedColor="#000000"
        app:visualizationNotPlayedColor="#727171"
        app:seekBarProgressColor="#000"
        app:showShareButton="false"
        app:playPauseCornerRadius="100"
        app:showTiming="true"
        app:viewCornerRadius="50"
        app:progressTimeColor="@color/black"
        app:viewBackground="@color/received_message_background"
        app:seekBarThumbColor="@color/button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">
    </me.jagar.chatvoiceplayerlibrary.VoicePlayerView>

